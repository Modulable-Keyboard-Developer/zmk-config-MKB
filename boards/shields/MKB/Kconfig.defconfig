if SHIELD_MKB_R
    config ZMK_KEYBOARD_NAME
        default "MKB_R"

    config ZMK_SPLIT
        default y
endif 

if SHIELD_MKB_L
    config ZMK_KEYBOARD_NAME
        default "MKB_L"

    config ZMK_SPLIT_ROLE_CENTRAL
        default y

    config ZMK_SPLIT_BLE_CENTRAL_PERIPHERALS
        default 1

    config ZMK_SPLIT
        default y
        
    if ZMK_DISPLAY
        config I2C
            default y

        config SSD1306
            default y
    endif # ZMK_DISPLAY

    if LVGL
        config LV_Z_VDB_SIZE
            default 64

        config LV_DPI_DEF
            default 148

        config LV_Z_BITS_PER_PIXEL
            default 1

        choice LV_COLOR_DEPTH
            default LV_COLOR_DEPTH_1
        endchoice
    endif # LVGL
endif

config MKB_L_MODULE_TB
    bool "Enable Left Module TrackBall"
    depends on SHIELD_MKB_L

config MKB_L_MODULE_JOY
    bool "Enable Left Module Joystick and Encoder"
    depends on SHIELD_MKB_L

config MKB_L_MODULE_ENC
    bool "Enable Left Module EC12 Encoder"
    depends on SHIELD_MKB_L